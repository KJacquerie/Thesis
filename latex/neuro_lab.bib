@article{latchoumane_thalamic_2017-1,
	title = {Thalamic {Spindles} {Promote} {Memory} {Formation} during {Sleep} through {Triple} {Phase}-{Locking} of {Cortical}, {Thalamic}, and {Hippocampal} {Rhythms}},
