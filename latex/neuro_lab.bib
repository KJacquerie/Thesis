	journal = {Journal of Neurophysiology},
	author = {Temporal, Simone and Desai, Mohati and Khorkova, Olga and Varghese, Gladis and Dai, Aihua and Schulz, David J. and Golowasch, Jorge},
	year = {2012},
	keywords = {Correlation, Crab, Ion channel, mRNA, Voltage clamp},
	pages = {718--727},
	file = {Attachment:/Users/kathleen/Zotero/storage/JN66CK7K/Temporal et al. - 2012 - Neuromodulation independently determines correlated channel expression and conductance levels in motor neurons.pdf:application/pdf},
}

@article{terman_activity_2002-1,
