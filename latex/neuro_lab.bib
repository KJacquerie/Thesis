	pages = {735--746},
	file = {Kühn et al. - 2004 - Event‐related beta desynchronization in human subt.pdf:/Users/kathleen/Zotero/storage/XAVXPNEB/Kühn et al. - 2004 - Event‐related beta desynchronization in human subt.pdf:application/pdf},
}

@article{lee_cloning_1999,
