issn = {14729288},
journal = {Thalamus and Related Systems},
keywords = {Accommodation,After hyperpolarization,Dynamics,Lateral geniculate nucleus,Vision},
number = {2},
pages = {135--156},
title = {{A firing-rate model of spike-frequency adaptation in sinusoidally-driven thalamocortical relay neurons}},
