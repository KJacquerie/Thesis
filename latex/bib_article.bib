issn = {16625188},
journal = {Frontiers in Computational Neuroscience},
keywords = {adaptation,chaos,discrete maps,ion channels,neuron,neuron, pulse stimulation, slow inactivation, nois,noise,pulse stimulation,slow inactivation},
number = {JANUARY 2012},
