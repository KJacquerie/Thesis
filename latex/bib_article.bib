issn = {10959564},
journal = {Neurobiology of Learning and Memory},
keywords = {Consolidation,Memory,Reactivation,Reconsolidation,Sleep},
pages = {166--173},
title = {{Sleep's role in the reconsolidation of declarative memories}},
volume = {136},
year = {2016}
}
