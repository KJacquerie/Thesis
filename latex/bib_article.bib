keywords = {Basal ganglia,Burst firing,LMAN,Spike count variability,Vocal learning,Zebra finch},
number = {49},
pages = {13232--13247},
title = {{Neurons in a forebrain nucleus required for vocal plasticity rapidly switch between precise firing and variable bursting depending on social context}},
volume = {28},
