	journal = {Journal of Neuroscience},
	author = {Deleuze, Charlotte and David, François and Béhuret, Sébastien and Sadoc, Gérard and Shin, Hee Sup and Uebele, Victor N. and Renger, John J. and Lambert, Régis C. and Leresche, Nathalie and Bal, Thierry},
